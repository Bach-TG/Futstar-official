{
  "name": "futstar-momentum-trading",
  "version": "1.0.0",
  "description": "Football Momentum Trading Platform on Solana - Bringing millions of football fans to crypto",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "cd contracts && anchor build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts && npm run test:backend",
    "test:contracts": "cd contracts && anchor test",
    "test:backend": "cd backend && pytest",
    "deploy:devnet": "cd contracts && anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "cd contracts && anchor deploy --provider.cluster mainnet"
  },
  "keywords": [
    "solana",
    "blockchain",
    "football",
    "sports",
    "betting",
    "trading",
    "momentum",
    "defi",
    "web3",
    "crypto"
  ],
  "author": "Futstar Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-native": "^0.72.8",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.87.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futstar/futstar-momentum-trading.git"
  },
  "bugs": {
    "url": "https://github.com/futstar/futstar-momentum-trading/issues"
  },
  "homepage": "https://futstar.fun"
}
